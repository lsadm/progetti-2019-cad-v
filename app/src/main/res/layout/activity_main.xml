<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity"
        tools:openDrawer="start">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/my_background1">
        <TextView
                android:text="@string/welcome"
                android:layout_width="290dp"
                android:layout_height="81dp" android:id="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="38dp"
                android:textSize="36sp" android:textStyle="italic"
                android:textAllCaps="false" android:textColor="@color/gold"
                android:textAlignment="center" android:layout_marginTop="4dp"/>
        <Button
                android:layout_width="70dp"
                android:layout_height="70dp" android:id="@+id/profilo"
                android:textColor="@color/smeraldo"
                android:textSize="24sp" android:textAllCaps="false" android:background="@mipmap/imm10"
                android:textAlignment="center"
                android:layout_marginStart="62dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"/>
        <Button
                android:layout_width="70dp"
                android:layout_height="70dp" android:id="@+id/storia_per_immagini"
                android:textColor="@color/smeraldo"
                android:textSize="24sp" android:textAllCaps="false" android:background="@mipmap/imm21"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/storia_vocale"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView60"/>
        <Button
                android:layout_width="70dp"
                android:layout_height="70dp" android:id="@+id/storia_vocale"
                android:textColor="@color/smeraldo"
                android:textSize="24sp" android:textAllCaps="false" android:background="@mipmap/imm20"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/storia"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView61"/>
        <TextView
                android:layout_width="305dp"
                android:layout_height="40dp" android:id="@+id/textView31"
                android:textSize="18sp"
                android:textStyle="italic"
                android:text="@string/messaggio" android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@+id/textView58"/>
        <Button
                android:layout_width="70dp"
                android:layout_height="70dp" android:id="@+id/storia"
                android:background="@mipmap/imm3"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="62dp"
                app:layout_constraintTop_toBottomOf="@+id/textView62"/>
        <Button
                android:layout_width="70dp"
                android:layout_height="70dp" android:id="@+id/calcolatrice"
                app:layout_constraintTop_toBottomOf="@+id/textView3" android:background="@mipmap/imm1"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/profilo" android:layout_marginStart="16dp"/>
        <Button
                android:layout_width="70dp"
                android:layout_height="70dp" android:id="@+id/numeri_casuali"
                app:layout_constraintStart_toEndOf="@+id/calcolatrice"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:background="@mipmap/imm2" android:layout_marginTop="16dp"/>
        <Button
                android:layout_width="70dp"
                android:layout_height="70dp" android:id="@+id/equazioni_lineari"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="62dp"
                android:background="@mipmap/imm4"
                app:layout_constraintTop_toBottomOf="@+id/textView56"/>
        <Button
                android:layout_width="70dp"
                android:layout_height="70dp" android:id="@+id/equanzioni_differenziali"
                app:layout_constraintStart_toEndOf="@+id/equazioni_lineari"
                android:layout_marginStart="16dp"
                android:background="@mipmap/imm5"
                app:layout_constraintTop_toBottomOf="@+id/textView67"/>
        <Button
                android:layout_width="70dp"
                android:layout_height="70dp" android:id="@+id/numeri_complessi"
                app:layout_constraintStart_toEndOf="@+id/equanzioni_differenziali" android:layout_marginStart="16dp"
                android:background="@mipmap/imm6"
                app:layout_constraintTop_toBottomOf="@+id/textView66"/>
        <Button
                android:layout_width="70dp"
                android:layout_height="70dp" android:id="@+id/plot1"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="62dp"
                android:background="@mipmap/imm7"
                app:layout_constraintTop_toBottomOf="@+id/textView65"/>
        <Button
                android:layout_width="70dp"
                android:layout_height="70dp" android:id="@+id/plot2"
                app:layout_constraintStart_toEndOf="@+id/plot1" android:layout_marginStart="16dp"
                android:background="@mipmap/imm8"
                app:layout_constraintTop_toBottomOf="@+id/textView64"/>
        <Button
                android:layout_width="70dp"
                android:layout_height="70dp" android:id="@+id/plot3"
                app:layout_constraintStart_toEndOf="@+id/plot2" android:layout_marginStart="16dp"
                android:background="@mipmap/imm9"
                app:layout_constraintTop_toBottomOf="@+id/textView63"/>
        <TextView
                android:text="@string/uno"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:id="@+id/textView56"
                android:textColor="@color/silver" android:textAlignment="center" android:layout_marginStart="62dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profilo" android:textSize="10sp"/>
        <TextView
                android:text="@string/dodici"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:id="@+id/textView57"
                android:textColor="@color/silver" android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/storia_per_immagini"
                app:layout_constraintStart_toEndOf="@+id/textView58" android:layout_marginStart="16dp"
                android:textSize="10sp"/>
        <TextView
                android:text="@string/undici"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:id="@+id/textView58"
                android:textColor="@color/silver" android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/textView59" android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/storia_vocale" android:textSize="10sp"/>
        <TextView
                android:text="@string/dieci"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:id="@+id/textView59"
                android:textColor="@color/silver" android:textAlignment="center"
                android:layout_marginStart="62dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/storia" android:textSize="10sp"/>
        <TextView
                android:text="@string/nove"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:id="@+id/textView60"
                android:textColor="@color/silver" android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/textView61" android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/plot3" android:textSize="10sp"/>
        <TextView
                android:text="@string/otto"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:id="@+id/textView61"
                android:textColor="@color/silver" android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/textView62" android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/plot2" android:textSize="10sp"/>
        <TextView
                android:text="@string/sette"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:id="@+id/textView62"
                android:textColor="@color/silver" android:textAlignment="center" android:layout_marginStart="62dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/plot1" android:textSize="10sp"/>
        <TextView
                android:text="@string/sei"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:id="@+id/textView63"
                android:textColor="@color/silver" android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/textView64" android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/numeri_complessi" android:textSize="10sp"/>
        <TextView
                android:text="@string/cinque"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:id="@+id/textView64"
                android:textColor="@color/silver" android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/equanzioni_differenziali"
                app:layout_constraintStart_toEndOf="@+id/textView65" android:layout_marginStart="16dp"
                android:textSize="10sp"/>
        <TextView
                android:text="@string/quattro"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:id="@+id/textView65"
                android:textColor="@color/silver" android:textAlignment="center" android:layout_marginStart="62dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/equazioni_lineari" android:textSize="10sp"/>
        <TextView
                android:text="@string/tre"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:id="@+id/textView66"
                android:textColor="@color/silver" android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/textView67" android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/numeri_casuali" android:textSize="10sp"/>
        <TextView
                android:text="@string/due"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:id="@+id/textView67"
                android:textColor="@color/silver" android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/calcolatrice"
                app:layout_constraintStart_toEndOf="@+id/textView56" android:layout_marginStart="16dp"
                android:textSize="10sp"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:id="@+id/nav_view"
            app:headerLayout="@layout/nav_header2"
            app:menu="@menu/info_menu"
            app:itemTextColor="@color/sea_green">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>

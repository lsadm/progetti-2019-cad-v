<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity"
        tools:openDrawer="start">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/my_background1">
        <TextView
                android:text="@string/welcome"
                android:layout_width="290dp"
                android:layout_height="81dp" android:id="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="35dp"
                android:textSize="36sp" android:textStyle="italic"
                android:textAllCaps="false" android:textColor="@color/gold"
                android:textAlignment="center"/>
        <Button
                android:text="@string/dettagli"
                android:layout_width="270dp"
                android:layout_height="40dp" android:id="@+id/button21"
                android:textColor="@color/smeraldo"
                android:textSize="24sp" android:textAllCaps="false" android:background="@drawable/my_button1"
                android:layout_marginStart="47dp" app:layout_constraintStart_toStartOf="parent"
                android:textAlignment="center" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/plot2"/>
        <TextView
                android:layout_width="270dp"
                android:layout_height="240dp" android:id="@+id/textView31"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="47dp"
                app:layout_constraintTop_toBottomOf="@+id/button21" android:textSize="24sp"
                android:textStyle="italic"/>
        <Button
                android:text="Button"
                android:layout_width="80dp"
                android:layout_height="80dp" android:id="@+id/storia"
                app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="54dp"/>
        <Button
                android:text="Button"
                android:layout_width="80dp"
                android:layout_height="80dp" android:id="@+id/calcolatrice"
                app:layout_constraintStart_toEndOf="@+id/storia"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"/>
        <Button
                android:text="Button"
                android:layout_width="80dp"
                android:layout_height="80dp" android:id="@+id/numeri_casuali"
                app:layout_constraintStart_toEndOf="@+id/calcolatrice"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
        />
        <Button
                android:text="Button"
                android:layout_width="80dp"
                android:layout_height="80dp" android:id="@+id/equazioni_lineari"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="54dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/storia"/>
        <Button
                android:text="Button"
                android:layout_width="80dp"
                android:layout_height="80dp" android:id="@+id/equanzioni_differenziali"
                app:layout_constraintStart_toEndOf="@+id/equazioni_lineari"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/calcolatrice"/>
        <Button
                android:text="Button"
                android:layout_width="80dp"
                android:layout_height="80dp" android:id="@+id/numeri_complessi"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/numeri_casuali"
                app:layout_constraintStart_toEndOf="@+id/equanzioni_differenziali" android:layout_marginStart="8dp"
        />
        <Button
                android:text="Button"
                android:layout_width="80dp"
                android:layout_height="80dp" android:id="@+id/plot1"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="54dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/equazioni_lineari"/>
        <Button
                android:text="Button"
                android:layout_width="80dp"
                android:layout_height="80dp" android:id="@+id/plot2"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/equanzioni_differenziali"
                app:layout_constraintStart_toEndOf="@+id/plot1" android:layout_marginStart="8dp"/>
        <Button
                android:text="Button"
                android:layout_width="80dp"
                android:layout_height="80dp" android:id="@+id/plot3"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/numeri_complessi"
                app:layout_constraintStart_toEndOf="@+id/plot2" android:layout_marginStart="8dp"
        />
    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:id="@+id/nav_view"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/nav_menu"
            app:itemTextColor="@color/sea_green">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>

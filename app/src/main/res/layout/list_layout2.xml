<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:padding="10dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/start"
                android:orientation="vertical">
            <EditText
                    android:id="@+id/titolo2"
                    android:textSize="24sp"
                    android:textColor="@color/smeraldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/imageViewData"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/titolo2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:id="@+id/textViewOrario_Data2"
                    app:layout_constraintStart_toEndOf="@+id/imageViewData"
                    android:layout_marginStart="22dp"
                    app:layout_constraintTop_toBottomOf="@+id/titolo2" android:layout_marginTop="16dp"/>
            <Button
                    android:id="@+id/cancella2"
                    android:background="@mipmap/imm41_foreground"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toEndOf="@+id/share2"
                    android:layout_marginStart="8dp" android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewOrario_Data2"/>
            <ProgressBar
                    android:id="@+id/progress_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    style="?android:progressBarStyleHorizontal"
                    android:progress="0"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="58dp"
                    android:layout_marginTop="82dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="invisible"/>
            <Button
                    android:id="@+id/share2"
                    android:background="@mipmap/imm46_foreground"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toEndOf="@+id/modifica2" android:layout_marginStart="8dp"
                    android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/textViewOrario_Data2"/>
            <Button
                    android:id="@+id/modifica2"
                    android:background="@mipmap/imm47_foreground"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toEndOf="@+id/imageViewData" android:layout_marginStart="8dp"
                    android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/textViewOrario_Data2"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_background2">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timerView"
            android:textColor="@color/sapphire"
            android:textSize="36dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateView"
            android:textColor="@color/sapphire"
            android:textSize="24dp"
            app:layout_constraintTop_toBottomOf="@+id/progressTimer" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <ProgressBar
            android:id="@+id/progressTimer"
            android:layout_width="120dp"
            android:layout_height="120dp"
            style="?android:progressBarStyleHorizontal"
            android:progress="100"
            android:progressDrawable="@drawable/circulare_progress_bar2"
            app:layout_constraintTop_toBottomOf="@+id/timerView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ProgressBar
            android:id="@+id/progressTimer2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            style="?android:progressBarStyleHorizontal"
            android:progress="100"
            android:progressDrawable="@drawable/circulare_progress_bar3"
            app:layout_constraintTop_toBottomOf="@+id/timerView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"/>
    <ProgressBar
            android:id="@+id/progressTimer3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            style="?android:progressBarStyleHorizontal"
            android:progress="100"
            android:progressDrawable="@drawable/circulare_progress_bar4"
            app:layout_constraintTop_toBottomOf="@+id/timerView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:padding="10dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/start"
                android:orientation="vertical">
            <EditText
                    android:id="@+id/titolo3"
                    android:textSize="24sp"
                    android:textColor="@color/smeraldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            <Button
                    android:id="@+id/riproduci_ferma"
                    android:background="@mipmap/imm34_foreground"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titolo3"/>
            <Button
                    android:id="@+id/cancella3"
                    android:background="@mipmap/imm41_foreground"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toEndOf="@+id/share3"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewOrario_Data3"/>
            <SeekBar
                    android:id="@+id/progress_audio"
                    android:background="@color/start2"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toEndOf="@+id/riproduci_ferma"
                    app:layout_constraintTop_toBottomOf="@+id/titolo3"/>
            <TextView
                    android:id="@+id/textViewOrario_Data3"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/timer"/>
            <TextView
                    android:id="@+id/timer"
                    android:textColor="@color/silver"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/riproduci_ferma"
                    app:layout_constraintStart_toStartOf="parent"/>
            <Button
                    android:id="@+id/share3"
                    android:background="@mipmap/imm46_foreground"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toEndOf="@+id/modifica3" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewOrario_Data3"/>
            <Button
                    android:id="@+id/modifica3"
                    android:background="@mipmap/imm47_foreground"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewOrario_Data3" android:layout_marginTop="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
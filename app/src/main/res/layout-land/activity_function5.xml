<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout"
        android:fitsSystemWindows="true"
        tools:context=".Function5"
        tools:openDrawer="start">
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Function5"
        android:background="@drawable/my_background1">
    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>
    <TextView
            android:text="@string/how_many"
            android:layout_width="130dp"
            android:layout_height="45dp" android:id="@+id/textView11"
            android:textSize="24sp"
            android:background="@drawable/my_button1" android:textAlignment="center" android:textColor="@color/silver"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13"/>
    <TextView
            android:text="@string/to"
            android:layout_width="130dp"
            android:layout_height="45dp" android:id="@+id/textView13"
            android:textSize="24sp"
            android:background="@drawable/my_button1"
            android:textAlignment="center" android:textColor="@color/silver"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15"/>
    <TextView
            android:text="@string/from"
            android:layout_width="130dp"
            android:layout_height="45dp" android:id="@+id/textView15"
            android:textSize="24sp"
            android:background="@drawable/my_button1"
            android:textAlignment="center" android:textColor="@color/silver"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <Button
            android:text="@string/generate"
            android:layout_width="236dp"
            android:layout_height="72dp" android:id="@+id/calculate"
            android:textSize="24sp" android:textAllCaps="false"
            android:background="@drawable/my_button1"
            android:textColor="@color/silver"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"/>
    <TextView
            android:layout_width="340dp"
            android:layout_height="268dp" android:id="@+id/textView"
            android:textSize="14sp"
            android:background="@drawable/my_button1" android:textColor="@color/blue"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
    <EditText
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:textSize="24sp"
            android:textColor="@color/blue"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:hint="Input..."/>
    <EditText
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            android:textSize="24sp" android:textColor="@color/blue"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:hint="Input..."/>
    <EditText
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText3"
            android:textSize="24sp"
            android:textColor="@color/blue"
            app:layout_constraintTop_toBottomOf="@+id/editText2"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            android:hint="Input..."/>
    <TextView
            android:text="@string/presentazione5"
            android:layout_width="236dp"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:textSize="24sp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/my_button1"
            android:textAlignment="center" android:textColor="@color/silver"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
</android.support.constraint.ConstraintLayout>
    <android.support.design.widget.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:id="@+id/nav_view5"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/nav_menu"
            app:itemTextColor="@color/sea_green">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>

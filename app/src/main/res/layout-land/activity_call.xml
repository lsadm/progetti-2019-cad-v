<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/my_background1"
        tools:context=".call">
    <TextView
            android:id="@+id/photoView"
            android:textSize="36dp"

            android:layout_width="100dp"
            android:layout_height="276dp"
            android:text="@string/photoViewLand" android:textAlignment="center"
            android:textColor="@color/gold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:background="@color/start2"/>
    <ImageView
            android:id="@+id/foto"
            android:layout_width="500dp"
            android:layout_height="276dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/photoView"
    />
</android.support.constraint.ConstraintLayout>
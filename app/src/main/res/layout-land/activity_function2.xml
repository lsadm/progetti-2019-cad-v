<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity"
        tools:openDrawer="start">
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_background1"
        tools:context=".Function2">
    <TextView
            android:text="@string/termine_costante"
            android:layout_width="45dp"
            android:layout_height="45dp" android:id="@+id/textView11"
            android:textSize="24sp"
            android:background="@drawable/my_button1" android:textAlignment="center" android:textColor="@color/silver"
            android:layout_marginStart="136dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13"/>
    <TextView
            android:text="@string/termine_lineare"
            android:layout_width="45dp"
            android:layout_height="45dp" android:id="@+id/textView13"
            android:textSize="24sp"
            android:background="@drawable/my_button1"
            android:textAlignment="center" android:textColor="@color/silver"
            android:layout_marginStart="136dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15"/>
    <TextView
            android:text="@string/termine_quadratico"
            android:layout_width="45dp"
            android:layout_height="45dp" android:id="@+id/textView15"
            android:textSize="24sp"
            android:background="@drawable/my_button1"
            android:textAlignment="center" android:textColor="@color/silver"
            android:layout_marginStart="136dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <Button
            android:text="@string/calculate"
            android:layout_width="195dp"
            android:layout_height="45dp" android:id="@+id/calculate"
            android:textSize="24sp" android:textAllCaps="false"
            android:background="@drawable/my_button1"
            android:textColor="@color/silver"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/editText"/>
    <TextView
            android:layout_width="195dp"
            android:layout_height="90dp" android:id="@+id/textView"
            android:textSize="18sp"
            android:background="@drawable/my_button1" android:textColor="@color/blue"
            app:layout_constraintTop_toBottomOf="@+id/calculate"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/editText2"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/editText"
            android:textSize="24sp"
            android:textColor="@color/blue"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/editText2"
            android:textSize="24sp" android:textColor="@color/blue"
            tools:layout_editor_absoluteY="143dp" app:layout_constraintStart_toEndOf="@+id/textView13"
    />
    <EditText
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/editText3"
            android:textSize="24sp"
            android:textColor="@color/blue"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/editText2"/>
    <TextView
            android:text="@string/presentazione2"
            android:layout_width="360dp"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:textSize="24sp"
            android:layout_marginStart="136dp" app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/my_button1"
            android:textAlignment="center" android:textColor="@color/silver"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>
    <android.support.design.widget.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:id="@+id/nav_view"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/nav_menu"
            app:itemTextColor="@color/sea_green">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
